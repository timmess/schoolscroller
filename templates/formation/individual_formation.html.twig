{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-3">
            <h1>{{ formation.name }}</h1>
            <h2>Ecoles proposant cette formation ({{ formation.school | length }}) :</h2>
            {% for school in formation.school %}
                <div class="col-6">
                    <h3 class="text-primary"><a href="{{ path('school', {id: school.id}) }}">{{ school.name }}</a></h3>
                </div>
            {% endfor %}
        </div>
        <div class="row my-3">
            <h2>Modules de la formation ({{ formation.modules | length }}) :</h2>
            {% for module in formation.modules %}
                <div class="col-6">
                    <h3><a href="{{ path('module', {id: module.id}) }}">{{ module.name }}</a></h3>
                    {{ module.description | raw }}
                    <p>Dur√©e : {{ module.duration }} hours</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
