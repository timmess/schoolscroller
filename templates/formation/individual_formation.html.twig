{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>{{ formation.name }}</h1>
            <h2>Schools wich give this formation :</h2>
            {% for school in formation.school %}
                <a href="{{ path('school', {id: school.id}) }}"><h3 class="text-primary">{{ school.name }}</h3></a>
            {% endfor %}
            <h2>Formation's modules :</h2>
            {% for module in formation.modules %}
                <div class="col-3">
                    <a href="{{ path('module', {id: module.id}) }}"><h3>{{ module.name }}</h3></a>
                    {{ module.description | raw }}
                    <p>Dur√©e : {{ module.duration }} hours</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
